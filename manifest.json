{
    "manifest_version": 2,
    "name": "Goodwill eBay Price Checker",
    "version": "2.4",
    "description": "Right-click to check eBay prices for Goodwill items",
    "permissions": [
        "contextMenus",
        "activeTab",
        "*://*.shopgoodwill.com/*",
        "scripting"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }
}
